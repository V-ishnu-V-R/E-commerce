                                        '{{eachDaySale.[5]._id.day}}/{{eachDaySale.[5]._id.month}}/{{eachDaySale.[5]._id.year}}',
                                        '{{eachDaySale.[6]._id.day}}/{{eachDaySale.[6]._id.month}}/{{eachDaySale.[6]._id.year}}'
                                    ],
                                    datasets: [{
                                        label: 'Delivered',
                                        data: [
                                            '{{eachDaySale.[0].total}}',
                                            '{{eachDaySale.[1].total}}',
                                            '{{eachDaySale.[2].total}}',
                                            '{{eachDaySale.[3].total}}',
                                            '{{eachDaySale.[4].total}}',
                                            '{{eachDaySale.[5].total}}',
                                            '{{eachDaySale.[6].total}}',
                                        ],
                                        fill: false,
                                        borderColor: 'rgb(75, 80, 192)',
                                        tension: 0.1
                                    }]
                                },
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });
