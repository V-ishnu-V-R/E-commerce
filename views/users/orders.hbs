



              <div class="container">
                <table class="table  " id="product-table">
                  <thead style="background-color: #5d574e; color: white;">
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Image</th>
                      <th scope="col">Name</th>
                      <th scope="col">Price</th>
                      <th scope="col">Quantity</th>
                      {{!-- <th scope="col">Total</th> --}}
                      <th scope="col">Status</th>
                      {{!-- <th scope="col"></th> --}}
                      <th scope="col">Cancel</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each orderData}}
                    <tr>
                      <td scope="row">{{inc @index}}</td>
                       <td>
                        {{#products}}
                        <ul>
                          <li><img src="/productUploads/{{productId.imagepath.[0]}}" style="width:50px;height:50px;">  </li> <br> 

                        </ul> {{/products}}</td>
                      
                      <td scope="row">{{#products}}
                        <ul>
                          <li>&#10003; {{productId.name}}</li> <br> <br> <br>

                        </ul> {{/products}}
                      </td>

                      <td scope="row">
                        <ul>
                          <li><p>$ {{ this.grandTotal}}</p></li>

                        </ul> </td>
                      <td scope="row">
                        {{#products}}
                        <ul>
                          <li>{{quantity}}</li> <br> <br> <br>

                        </ul> {{/products}}
                      </td>
                      {{!-- <td scope="row">gfgf</td> --}}
                      <td id="orderStatus" scope="row" >{{this.status}}</td>
                      {{#if this.cancelled}}
                      <td> Order Cancelled.</td>
                      {{else}} {{#if this.Delivered}}
                      <td>Item Deliveredl</td>
                      {{else}}
                      <td scope="row">
                         <button class="btn btn-outline-danger btn-sm"/
                          onclick="cancelOrder('{{this._id}}');">Cancel Order ?</button>
                      </td>
                      {{/if}} {{/if}}
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>

<script>
  function cancelOrder(orderId){
     $.ajax({
    url: '/cancelOrder',
    data: {
      
      orderId: orderId,

    },

    method: 'post',
    success: (res) => {
    
     location.reload()

    }

      })
  }
</script>


        



